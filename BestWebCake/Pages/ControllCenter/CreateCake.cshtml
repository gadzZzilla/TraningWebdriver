@page
@model CreateCakeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Создание записи";
}
<html>
<body>
    <form enctype="multipart/form-data" method="POST" asp-controller="Cake" asp-action="CakeAddImage">
    <div class="row">
        <div class="col-md-4">

                <div class="form-group">
                    @Html.LabelFor(model => model.Cake.Name)
                    @Html.EditorFor(model => model.Cake.Name, new { htmlAttributes = new { @class = "form-control" } } )
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Cake.Description)
                    @Html.EditorFor(model => model.Cake.Description, new { htmlAttributes = new { @class = "form-control" } } )
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Cake.Weight)
                    @Html.EditorFor(model => model.Cake.Weight, new { htmlAttributes = new { @class = "form-control" } } )
                </div>
                <div>
                    @Html.LabelFor(model => model.Cake.Image)
                    @Html.EditorFor(model => model.Cake.Image, new { htmlAttributes = new { @class = "form-control" } })

                    <input asp-for="Cake.FilePath" type="file" name="files" onchange="preview_2(this)"/>
                </div>
        </div>
        <div>
            <img asp-for="Cake.Image" id="Cake_Image" name ="Cake_Image" style="height: 300px;width: 300px;"/>
        </div>
    </div>
                <div class="form-group">
                    <button class="btn btn-default" asp-controller="Cake" asp-action="CakeAddImage" method="post" >Сохранить</button>
                    @* <input  class="btn btn-default" type="submit" value = "Сохранить"> *@
                </div>
    </form>
</body>
</html>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@page "{id:Guid}"
@model CakeCrudeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Торты";
}
<h1>Рецепт - @Model.Cake.Name</h1>
<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Название торта</th>
                <th>Себестоимость</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CakeCrudes)
            {
                <tr>
                    <td>@item.CakeId</td>
                    <td>100</td>
                    <td>
                        <button class="btn btn-default" asp-page="./EditCakeCrude" asp-route-id="@item.CakeId">редактировать</button>
                        <button class="btn btn-default" type="submit"  asp-page-handler="delete" asp-route-id="@item.CakeId">удалить</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
        <div class="form-group">
            <button asp-page="./CakeAddCrude" class="btn btn-default">Создать</button>
        </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}